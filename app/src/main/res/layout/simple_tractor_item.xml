<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/butOpen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp">

            <ImageView
                android:id="@+id/tractorImage"
                android:layout_width="270dp"
                android:layout_height="152dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/tractor1" />

            <TextView
                android:id="@+id/textAvailability"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="В наличии"
                android:textAlignment="center"
                android:textColor="@color/ready"
                app:layout_constraintBottom_toBottomOf="@+id/tractorImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tractorImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tractorPriceView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="TextView"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/butMore"
                app:layout_constraintEnd_toEndOf="@+id/textAvailability"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textAvailability"
                app:layout_constraintTop_toTopOf="@+id/tractorNameView" />

            <TextView
                android:id="@+id/tractorShortDesc"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginTop="3dp"
                android:text="TextView"
                app:layout_constraintEnd_toStartOf="@+id/tractorPriceView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tractorNameView" />

            <Button
                android:id="@+id/butMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tractorShortDesc" />

            <TextView
                android:id="@+id/tractorNameView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="TextView"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tractorPriceView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tractorImage" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>